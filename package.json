{
  "name": "tokensearch.js",
  "version": "0.5.16",
  "description": "Substring token search",
  "main": "./lib/tokensearch.min.js",
  "author": {
    "name": "Michael Vogt",
    "email": "michael@neeo.com"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/neophob/tokensearch.js.git"
  },
  "keywords": [
    "string search",
    "token",
    "substring",
    "json",
    "search",
    "collection"
  ],
  "license": "MIT",
  "devDependencies": {
    "mocha": "~2.2.1",
    "chai": "~2.2.0",
    "uglify-js": "~2.4.17",
    "jshint": "~2.6.3",
    "pre-commit": "~1.0.6",
    "istanbul": "~0.3.8"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "bugs": {
    "url": "https://github.com/neophob/tokensearch.js/issues"
  },  
  "scripts": {
    "test": "istanbul cover --hook-run-in-context ./node_modules/mocha/bin/_mocha -- --reporter list",
    "jshint": "jshint --verbose -c .jshint ./lib/tokensearch.js",
    "coverage": "istanbul check-coverage --statements 80 --functions 80 --lines 80 --branches 80",
    "clean": "rm ./lib/tokensearch.min.js",
    "minify": "uglifyjs lib/tokensearch.js --screw-ie8 --stats --compress --mangle -o lib/tokensearch.min.js",
    "gitcommit": "git commit -am 'update minified code' | cat && git push | cat",
    "release": "npm test && npm run-script gitcommit && npm version patch -m 'Upgrade version to %s' && npm publish && git push --tags",
    "bowerrelease": "bower version patch -m 'Upgrade version to %s'"
  },
  "pre-commit": [
    "jshint",
    "test",
    "coverage"
  ]  
} 
